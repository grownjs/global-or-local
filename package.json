    "eslint-plugin-import": "^2.14.0",
    "js-yaml": ">=3.13.1",
    "kind-of": ">=6.0.3",
    "mocha": "^6.0.2",
    "minimist": ">=0.2.1",
    "nyc": "^15.1.0",
    "set-value": ">=2.0.1",
